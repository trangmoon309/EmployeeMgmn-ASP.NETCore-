
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Identity.ViewModels.Identity.EditUserViewModel;
<h1>Edit User</h1>

<form method="post" asp-controller="Administration" asp-action="EditUser">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 col-form-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="col-md-2 col-form-label"></label>
            <div class="col-md-10">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="City" class="col-md-2 col-form-label"></label>
            <div class="col-md-10">
                <input asp-for="City" class="form-control" />
            </div>
        </div>

        <div asp-validation-summary="All"></div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary m-2">Update</button>
            <a class="btn btn-primary m-2" asp-controller="Administration" asp-action="ListUsers">Cancel</a>
        </div>
    </div>


    <div class="card">
        <div class="card-header">
            User Roles
        </div>
        <div class="card-body">
            @if (Model.Roles.Count != 0)
            {
                @foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="ManageUserRole" asp-route-userId="@Model.Id">Manage Roles</a>
        </div>

    </div>

    <div class="card">
        <div class="card-header">
            User Claims
        </div>
        <div class="card-body">
            @if (Model.Claims.Count != 0)
            {
                @foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                } }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="ManageClaim" asp-route-userId="@Model.Id">Manage Claims</a>
        </div>

    </div>
</form>
