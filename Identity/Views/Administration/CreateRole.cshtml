@model Identity.ViewModels.CreateRoleViewModel;
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateRole</h1>


<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateRole" asp-controller="Administration" method="post">
            <div class="form-group">
                <label asp-for="@Model.RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="submit" class="btn btn-primary" value="Create Role" style="width: auto" />

        </form>
    </div>
</div>